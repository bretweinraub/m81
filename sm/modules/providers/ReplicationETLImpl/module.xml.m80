			   c => 'extractData.pl',
			   t => __SUCCESS__}]};


$module{stage} = {a => [{n => stage,
                          c => 'exit 0',
                          t => __SUCCESS__}]};


$module{transform} = {a => [{n => transform,
                          c => 'exit 0',
                          t => __SUCCESS__}]};


$module{load} = {a => [{n => load,
			c => 'loadData.pl',
			t => __SUCCESS__}]};

$module{crawl} = {a => [{n => crawl,
			 c => 'doCrawl.sh',
			 t => __SUCCESS__}]};

# $module{postprocess} = {a => [{n => postprocess,
